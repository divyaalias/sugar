<div class="caption-full">
<div class="test-sugar">
	<p class="test-title">Test Your Blood Sugar With Diabetes</p>
	<%= form_for(@diabetic) do |f| %>
	  <div class="form-group">
	    <%= f.number_field :blood_level, :min => 1, :max => 9 %> mg/dl
	    <label class="error"></label>
	  </div>
	    <%= f.hidden_field  :user_id, :value => current_user.id %>
	  <% if @diabetic.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @diabetic.errors.full_messages.each do |message| %>
        <label class="error msg"><%= message %></label>
      <% end %>
      </ul>
    </div>
  <% end %>   
	  <div class="actions">
	    <%= f.submit "Test Diabetic", :class => "btn btn-primary btn-sm"%>
	  </div>
	<% end %>
</div>
</div>


<script type="text/javascript">
$(document).ready(function () {
  $("#new_diabetic").validate({
    rules:{
      "diabetic[blood_level]":
        {
        required: true
       }
    },
    messages: {
      "diabetic[blood_level]":
        {
        required:"Please Enter value"
        }
    }
  });
});
</script>